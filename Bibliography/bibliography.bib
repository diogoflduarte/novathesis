	keywords = {Purkinje cell, {GABA}, (-)-bicuculline methochloride, {AMPA}, analysis of variance, {ANOVA}, bicuculline, {CIO}, {CNQX}, contralateral inferior olive, lateral-inhibition, Neutral Red, optical imaging, α-amino-3-hydroxyl-5-methyl-4-isoxazole propionate},
