	number = {1},
	journaltitle = {Experimental Brain Research},
	author = {Gordon, James and Ghilardi, Maria Felice and Ghez, Claude},
	date = {1994},
	pmid = {7925800},
	keywords = {Human, Coordinate transformations, Multijoint arm movements, Reaching Accuracy},
